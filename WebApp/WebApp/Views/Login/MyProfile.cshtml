@model WebApp.Models.CreditCard
@{
    ViewData["Title"] = "My Profile";
}
<body>
    <script>
        function loadXMLDoc() {
            var xmlhttp = new XMLHttpRequest();
            xmlhttp.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {
                    myFunction(this);
                }
            };
            xmlhttp.open("GET", "/hot_stocks.xml", true);
            xmlhttp.send();
        }
        function myFunction(xml) {
            var i;
            var xmlDoc = xml.responseXML;
            var table = "<tr><th>Name</th><th>Symbol</th><th>Market</th></tr>";
            var x = xmlDoc.getElementsByTagName("STOCK");
            for (i = 0; i < x.length; i++) {
                table += "<tr><td>" +
                    x[i].getElementsByTagName("NAME")[0].childNodes[0].nodeValue +
                    "</td><td>" +
                    x[i].getElementsByTagName("TITLE")[0].childNodes[0].nodeValue +
                    "</td><td>" +
                    x[i].getElementsByTagName("MARKET")[0].childNodes[0].nodeValue +
                    "</td></tr>";
            }
            document.getElementById("demo").innerHTML = table;
        }
    </script>
</body>
<br />
<h1>User Profile</h1>
<ul>
    @foreach (var c in User.Claims)
    {
        <li>@c.Type: @c.Value</li>
    }
</ul>

<form class="form-horizontal" method="POST" asp-action="AddCreditCard">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <fieldset>
        <br />
        <!-- Email -->
        <div class="control-group">
            <label class="control-label">Card Number</label>
            <div class="controls">
                <span asp-validation-for="CardNum" class="text-danger"></span>
                <input asp-for="CardNum" type="password" class="form-control" />
                <p class="help-block">Card number has to exist of digits only</p>
            </div>
        </div>

        <!-- Password -->
        <div class="control-group">
            <label class="control-label" for="password">CVV</label>
            <div class="controls">
                <span asp-validation-for="CVV" class="text-danger"></span>
                <input asp-for="CVV" type="password" placeholder="" class="input-xlarge form-control" />
                <p class="help-block">CVV has to be 3 digits</p>
            </div>
        </div>
        <br />

        <!-- CardHolder -->
        <div class="control-group">
            <label class="control-label" for="password">Card Holder</label>
            <div class="controls">
                <span asp-validation-for="CardHolder" class="text-danger"></span>
                <input asp-for="CardHolder" placeholder="" class="input-xlarge form-control" />
                <p class="help-block">Please provide the card holder name</p>
            </div>
        </div>

        <div class="control-group">
            <!-- Button -->
            <div class="controls">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </div>

    </fieldset>
</form>

<!-- Ajax -->
<br />
<button type="button" onclick="loadXMLDoc()">Hot stocks &#128293</button>
<br />
<table id="demo"></table>