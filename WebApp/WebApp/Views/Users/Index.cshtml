@model IEnumerable<WebApp.Models.User>

@{ ViewData["Title"] = "Index"; }
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

<h1>User Managment</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Admin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Username)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Password)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Birthdate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Admin)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.Username">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.Username">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.Username">Delete</a>
    </td>
</tr>
}
    </tbody>
</table>

<br />
<h2>Search User</h2>

@using (Html.BeginForm("Search", "Users", FormMethod.Post, new { target = "_blank" }))
{
    @Html.AntiForgeryToken();

<p>
    Name: @Html.TextBox("Name")
</p>
<p>
    Email: @Html.TextBox("Email")
</p>
<p>
    <input type="submit" value="Search user" />
</p>
}