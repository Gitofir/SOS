@model IEnumerable<WebApp.Models.User>

@{
    ViewData["Title"] = "Index";
}
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        val1 = 5;
        val2 = 2;

        $.ajax({
            type: "POST",
            url: "@Url.Action("Calculate")",
            data: { number1: val1, number2: val2 },
            dataType: "text",
            success: function(msg) {
                document.getElementById("spanMsg").textContent = JSON.stringify("Sum is " + msg);
            },
            error: function (req, status, error) {
                document.getElementById("spanMsg").textContent = error;
            }
        })

        @*$.ajax({
            type: "POST",
